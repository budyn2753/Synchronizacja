<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.darek.handlowiec.ActivityProdukty">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btshow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="AddNewSczegolyZamowienie"
            android:text="Dodaj do zamowienia"

            />

        <TextView
            android:id="@+id/txtview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Aktualna wartość dodawanego towaru: 0.0" />
    </LinearLayout>


    <ListView
        android:id="@+id/checkable_list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

    </ListView>
</LinearLayout>